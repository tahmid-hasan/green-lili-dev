{%- form 'contact', id: 'ask-question-form' -%}
  <input type="hidden" name="contact[from form]" value="{{ 'products.product.question_form.form_title' | t }}">
  <input type="hidden" name="contact[product]" value="{{ product.title }}">
  <input type="hidden" name="contact[product url]" value="{{ shop.url }}{{ product.url }}">
  <div class="ask-question-form">
    <div class="ask-question-form-header text-center">
      <h3 class="h4">{{ 'products.product.question_form.form_title' | t }}</h3>
    </div>
    <div class="form-field">
      <label for="AskQuestionForm-Name" class="visually-hidden">
        {{- 'products.product.question_form.field_name' | t -}}
      </label>
      <input
        id="AskQuestionForm-Name"
        type="text"
        class="form-control"
        name="contact[name]"
        required
        placeholder="{{ 'products.product.question_form.field_name' | t }}*"
      >
    </div>
    <div class="form-field">
      <label for="AskQuestionForm-Email" class="visually-hidden">
        {{- 'products.product.question_form.field_email' | t -}}
      </label>
      <input
        id="AskQuestionForm-Email"
        type="email"
        class="form-control"
        name="contact[email]"
        required
        placeholder="{{ 'products.product.question_form.field_email' | t }}*"
      >
    </div>
    <div class="form-field">
      <label for="AskQuestionForm-Phone" class="visually-hidden">
        {{- 'products.product.question_form.field_phone' | t -}}
      </label>
      <input
        id="AskQuestionForm-Phone"
        type="tel"
        class="form-control"
        name="contact[phone]"
        placeholder="{{ 'products.product.question_form.field_phone' | t }}"
      >
    </div>
    <div class="form-field">
      <label for="AskQuestionForm-Message" class="visually-hidden">
        {{- 'products.product.question_form.field_message' | t -}}
      </label>
      <textarea
        id="AskQuestionForm-Message"
        class="form-control form-control--textarea"
        name="contact[body]"
        rows="4"
        required
        placeholder="{{ 'products.product.question_form.field_message' | t }}*"
      ></textarea>
      <p class="form-message form-message--small text-subtext m-0">
        <em>{{ 'products.product.question_form.note' | t }}</em>
      </p>
    </div>
    <div class="form-submit text-center">
      <button class="btn btn--primary btn-submit">{{ 'products.product.question_form.submit_button' | t }}</button>
    </div>
  </div>
  {%- if form.posted_successfully? -%}
    <p>{{ 'products.product.question_form.success_message' | t }}</p>
  {%- else -%}
    {{ form.errors | default_errors }}
  {%- endif -%}
{%- endform -%}
