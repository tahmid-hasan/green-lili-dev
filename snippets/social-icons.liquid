{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}
<ul class="list-unstyled flex gap-x-4 gap-y-2 items-center socials{% if class %} {{ class}}{% endif %}" role="list">
  {%- if settings.social_facebook_link != blank -%}
    <li class="social__item inline-flex">
      <a href="{{ settings.social_facebook_link }}" class="social__link inline-flex">
        {%- render 'icon-facebook', size: size -%}
        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
  {%- endif -%}
