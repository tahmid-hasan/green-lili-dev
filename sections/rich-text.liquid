{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}
{%- assign motion_delay = 50 -%}
<div
  class="section section--padding rich-text-section color-{{ section.settings.color_scheme }}{% if section.settings.custom_class != blank %} {{ section.settings.custom_class }}{% endif %}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    <div class="rich-text text-{{ section.settings.content_alignment }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'subheading' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block rich-text__subheading text-subheading"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.subheading }}
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'heading' %}
            <h2
              class="rich-text__heading {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
            >
              <motion-element class="block" data-motion="fade-up" data-motion-delay="{{ motion_delay }}">
                {% render 'highlight-text',
                  text: block.settings.heading,
                  style: block.settings.heading_highlight_style
                %}
              </motion-element>
            </h2>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'text' %}
            <motion-element
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
              class="block rich-text__text rte {{ block.settings.text_size }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
          {% when 'button' %}
            <motion-element
              class="block"
              data-motion="fade-up"
              data-motion-delay="{{ motion_delay }}"
            >
              {% if block.settings.button_label != blank %}
                <a
                  {% if block.settings.button_link != blank %}
                    href="{{ block.settings.button_link }}"
                  {% else %}
                    role="link" aria-disabled="true"
                  {% endif %}
                  class="btn {{ block.settings.button_style }}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.button_label -}}
                </a>
              {% endif %}
            </motion-element>
            {%- assign motion_delay = motion_delay | plus: 50 -%}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

